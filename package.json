{
  "name": "simple-mcp-client",
  "version": "1.0.0",
  "description": "Simple MCP client that connects to MCP servers and returns available tools",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "start:server": "npm run build && node dist/src/main.js",
    "dev:server": "tsx --watch src/main.ts",
    "inspector": "npx @modelcontextprotocol/inspector"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "client",
    "tools"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.0",
    "@nestjs/common": "^11.1.6",
    "@nestjs/core": "^11.1.6",
    "@nestjs/platform-express": "^11.1.6",
    "@nestjs/swagger": "^11.2.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "mcp-client": "^1.13.1",
    "mcp-remote": "^0.1.29",
    "node-fetch": "^3.3.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.7.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
